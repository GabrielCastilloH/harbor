rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow users to upload and access their own profile images
    match /users/{userId}/images/{imageId} {
      allow read: if request.auth != null && (
        // User can access their own images
        request.auth.uid == userId
        // All other access must go through signed URLs generated by Cloud Functions
        // No direct access to other users' images (even blurred ones)
      );
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
