rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // SECURITY: All image access must go through Cloud Functions with signed URLs
    match /users/{userId}/images/{imageId} {
      // Deny all direct reads - images are served via signed URLs from getImages function
      // This ensures proper consent validation and blur level enforcement
      allow read: if false;
      // Owner can upload/delete their own images
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
