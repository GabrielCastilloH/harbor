service cloud.firestore {
  match /databases/{database}/documents {
    // Allow users to read and write their own data
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Allow users to read other users' profiles for matching
    match /users/{userId} {
      allow read: if request.auth != null;
    }
    
    // Allow users to read their own matches
    match /matches/{matchId} {
      allow read: if request.auth != null && 
        (resource.data.user1Id == request.auth.uid || resource.data.user2Id == request.auth.uid);
    }
    
    // Allow users to create new matches
    match /matches/{matchId} {
      allow create: if request.auth != null && 
        (request.resource.data.user1Id == request.auth.uid || request.resource.data.user2Id == request.auth.uid);
    }
    
    // Secure consent management - users can only update their own consent status
    match /matches/{matchId} {
      allow update: if request.auth != null && (
        // User1 can only update user1Consented
        (resource.data.user1Id == request.auth.uid && 
         request.resource.data.user1Consented == request.resource.data.user1Consented &&
         request.resource.data.user2Consented == resource.data.user2Consented) ||
        // User2 can only update user2Consented  
        (resource.data.user2Id == request.auth.uid && 
         request.resource.data.user2Consented == request.resource.data.user2Consented &&
         request.resource.data.user1Consented == resource.data.user1Consented)
      );
    }
    
    // Allow users to read and write their own swipes
    match /swipes/{swipeId} {
      allow read, write: if request.auth != null && 
        (resource.data.swiperId == request.auth.uid || resource.data.swipedId == request.auth.uid);
    }
    
    // Allow users to create new swipes
    match /swipes/{swipeId} {
      allow create: if request.auth != null && 
        (request.resource.data.swiperId == request.auth.uid || request.resource.data.swipedId == request.auth.uid);
    }
    
    // Allow users to manage their own chat messages
    match /chats/{chatId}/messages/{messageId} {
      allow read, write: if request.auth != null && 
        (resource.data.senderId == request.auth.uid || resource.data.receiverId == request.auth.uid);
    }
    
    // Allow users to create new chat messages
    match /chats/{chatId}/messages/{messageId} {
      allow create: if request.auth != null && 
        (request.resource.data.senderId == request.auth.uid || request.resource.data.receiverId == request.auth.uid);
    }
    
    // Allow users to read chat metadata
    match /chats/{chatId} {
      allow read: if request.auth != null && 
        (resource.data.user1Id == request.auth.uid || resource.data.user2Id == request.auth.uid);
    }
    
    // Allow users to create chat metadata
    match /chats/{chatId} {
      allow create: if request.auth != null && 
        (request.resource.data.user1Id == request.auth.uid || request.resource.data.user2Id == request.auth.uid);
    }
  }
