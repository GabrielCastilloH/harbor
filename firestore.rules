rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if a user is banned
    function isBanned(userId) {
      return exists(/databases/$(database)/documents/bannedAccounts/$(userId));
    }
    
    // Allow users to read their own ban status
    match /bannedAccounts/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId;
    }
    // Allow users to read and write their own data (if not banned)
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId && !isBanned(request.auth.uid);
    }
    
    // Users can only read their own data - all other user data must go through Cloud Functions
    // This prevents direct access to sensitive information like emails
    match /users/{userId} {
      allow read: if false; // Disable direct reads - force use of Cloud Functions
    }
    
    // Allow users to read their own matches (if not banned)
    match /matches/{matchId} {
      allow read: if request.auth != null && !isBanned(request.auth.uid) &&
        (resource.data.user1Id == request.auth.uid || resource.data.user2Id == request.auth.uid);
    }
    
    // Allow users to create new matches (if not banned)
    match /matches/{matchId} {
      allow create: if request.auth != null && !isBanned(request.auth.uid) &&
        (request.resource.data.user1Id == request.auth.uid || request.resource.data.user2Id == request.auth.uid);
    }
    
    // Secure consent management - users can only update their own consent status (if not banned)
    match /matches/{matchId} {
      allow update: if request.auth != null && !isBanned(request.auth.uid) && (
        // User1 can only update user1Consented, user2Consented must remain unchanged
        (resource.data.user1Id == request.auth.uid && 
         request.resource.data.user2Consented == resource.data.user2Consented &&
         resource.data.diff(request.resource.data).affectedKeys().hasOnly(['user1Consented'])) ||
        // User2 can only update user2Consented, user1Consented must remain unchanged
        (resource.data.user2Id == request.auth.uid && 
         request.resource.data.user1Consented == resource.data.user1Consented &&
         resource.data.diff(request.resource.data).affectedKeys().hasOnly(['user2Consented']))
      );
    }
    
    // Allow users to read and write their own swipes (if not banned)
    match /swipes/{swipeId} {
      allow read, write: if request.auth != null && !isBanned(request.auth.uid) &&
        (resource.data.swiperId == request.auth.uid || resource.data.swipedId == request.auth.uid);
    }
    
    // Allow users to create new swipes (if not banned)
    match /swipes/{swipeId} {
      allow create: if request.auth != null && !isBanned(request.auth.uid) &&
        (request.resource.data.swiperId == request.auth.uid || request.resource.data.swipedId == request.auth.uid);
    }
    
    // Allow users to manage their own chat messages (banned users can still chat with existing matches)
    match /chats/{chatId}/messages/{messageId} {
      allow read, write: if request.auth != null && 
        (resource.data.senderId == request.auth.uid || resource.data.receiverId == request.auth.uid);
    }
    
    // Allow users to create new chat messages (banned users can still chat with existing matches)
    match /chats/{chatId}/messages/{messageId} {
      allow create: if request.auth != null && 
        (request.resource.data.senderId == request.auth.uid || request.resource.data.receiverId == request.auth.uid);
    }
    
    // Allow users to read chat metadata (banned users can still access existing chats)
    match /chats/{chatId} {
      allow read: if request.auth != null && 
        (resource.data.user1Id == request.auth.uid || resource.data.user2Id == request.auth.uid);
    }
    
    // Allow users to create chat metadata (banned users cannot create new chats)
    match /chats/{chatId} {
      allow create: if request.auth != null && !isBanned(request.auth.uid) &&
        (request.resource.data.user1Id == request.auth.uid || request.resource.data.user2Id == request.auth.uid);
    }
  }
}