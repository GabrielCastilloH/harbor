rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if a user is banned
    function isBanned(userId) {
      return exists(/databases/$(database)/documents/bannedAccounts/$(userId));
    }

    // --- Banned Accounts ---
    match /bannedAccounts/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if false;
    }

    // --- Users and subcollections ---
    match /users/{userId} {
      // Only the authenticated user can read/create/update/delete their own user doc (unless banned)
      allow read, create, update, delete: if request.auth != null && request.auth.uid == userId && !isBanned(request.auth.uid);

      // Subcollection: currentMatches
      match /currentMatches/{matchId} {
        allow read, write: if request.auth != null && request.auth.uid == userId && !isBanned(request.auth.uid);
      }

      // Subcollection: counters (e.g., swipes)
      match /counters/{counterId} {
        allow read, write: if request.auth != null && request.auth.uid == userId && !isBanned(request.auth.uid);
      }
    }

    // --- Swipes --- (new structure)
    match /swipes/{userId} {
      allow read, write: if false; // parent doc not used by clients

      match /outgoing/{swipedUserId} {
        // user can create/read their own outgoing swipe docs; immutable after create
        allow read, create: if request.auth != null && request.auth.uid == userId && !isBanned(userId);
        allow update, delete: if false;
      }

      match /incoming/{swiperUserId} {
        // user can read who swiped them; writes are server-managed only
        allow read: if request.auth != null && request.auth.uid == userId && !isBanned(userId);
        allow write: if false;
      }
    }

    // --- Swipes (legacy flat collection) --- TEMP for migration
    match /swipes/{swipeId} {
      allow read: if request.auth != null && !isBanned(request.auth.uid) &&
        (resource.data.swiperId == request.auth.uid || resource.data.swipedId == request.auth.uid);
      allow create: if request.auth != null && !isBanned(request.auth.uid) &&
        (request.resource.data.swiperId == request.auth.uid || request.resource.data.swipedId == request.auth.uid);
      allow update, delete: if false;
    }

    // --- Matches (unified) ---
    match /matches/{matchId} {
      // Read if the requester is a participant
      allow read: if request.auth != null && !isBanned(request.auth.uid) && request.auth.uid in resource.data.participantIds;

      // Create if requester is one of the participants
      allow create: if request.auth != null && !isBanned(request.auth.uid) && request.auth.uid in request.resource.data.participantIds;

      // Users can only update their own consent/view flags (unified and legacy compatibility)
      allow update: if request.auth != null && !isBanned(request.auth.uid) && request.auth.uid in resource.data.participantIds && (
        // Unified maps
        request.resource.data.participantConsent[request.auth.uid] != resource.data.participantConsent[request.auth.uid] ||
        request.resource.data.participantViewed[request.auth.uid] != resource.data.participantViewed[request.auth.uid] ||
        // Legacy booleans for individual matches
        (
          (resource.data.user1Id == request.auth.uid && request.resource.data.user1Consented != resource.data.user1Consented && request.resource.data.user2Consented == resource.data.user2Consented) ||
          (resource.data.user2Id == request.auth.uid && request.resource.data.user2Consented != resource.data.user2Consented && request.resource.data.user1Consented == resource.data.user1Consented)
        )
      );
    }

    // --- Reports ---
    match /reports/{reportId} {
      allow create: if request.auth != null && !isBanned(request.auth.uid);
      allow read: if request.auth != null && request.auth.uid == resource.data.reporterId;
      allow update, delete: if false;
    }

    // --- Chats (generalized to participantIds array) ---
    match /chats/{chatId} {
      allow read: if request.auth != null && request.auth.uid in resource.data.participantIds;
      allow create: if request.auth != null && !isBanned(request.auth.uid) && request.auth.uid in request.resource.data.participantIds;

      match /messages/{messageId} {
        allow read: if request.auth != null && request.auth.uid in resource.data.participantIds;
        allow create: if request.auth != null && request.auth.uid == request.resource.data.senderId;
        allow update, delete: if false;
      }
    }
  }
}